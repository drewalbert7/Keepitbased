# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://keepitbased.com

# Database - Use environment variables or connection string
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/keepitbased
REDIS_URL=redis://localhost:6379

# JWT - CRITICAL: Generate a strong, random secret
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-32-characters
JWT_EXPIRES_IN=7d

# API Keys - Get these from respective providers
ALPHA_VANTAGE_API_KEY=
POLYGON_API_KEY=
COINAPI_KEY=

# Kraken API (for crypto data) - Rotate these if exposed
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# Email (for alerts) - Use app-specific passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Alert Settings
PRICE_CHECK_INTERVAL_MS=60000
MAX_ALERTS_PER_USER=50

# Python Service
PYTHON_SERVICE_URL=http://127.0.0.1:5001

# Security Headers (for production)
SECURITY_HEADERS_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=https://keepitbased.com

# Session Security
SESSION_SECRET=
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=strict

# Monitoring
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_REPORTING=true